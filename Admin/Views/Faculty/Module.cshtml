@model IEnumerable<Admin.Models.Module>

@{
    ViewData["Title"] = "Module";
}

<style>
    body {
        background-image: url("/images/academy.jpeg");
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<div>
    <h1>Module</h1>
    <a style="margin-right:50px;color:red" asp-action="Academyportal">Home</a>
    <a style="margin-left:30px;color:red " asp-action="Login">Logout</a>

</div>

<p>
    <a asp-action="Create2">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Technology_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Domain_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Technology_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domain_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Module_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                <a asp-action="Edit2" asp-route-id="@item.Faculty_Id">Edit2</a> |
                
                <a asp-action="Delete2" asp-route-id="@item.Faculty_Id">Delete2</a>
            </td>
        </tr>
}
    </tbody>
</table>

